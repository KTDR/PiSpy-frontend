doctype html
html
	head
		meta(charset='utf-8')
		meta(name='viewport', content='width=device-width,initial-scale=1,shrink-to-fit=no')
		title Register - Brand
		link(rel='stylesheet', href='assets/bootstrap/css/bootstrap.min.css')
		link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i')
		link(rel='stylesheet', href='assets/fonts/fontawesome-all.min.css')
	body.bg-gradient-primary(style='margin: 0px;padding: 0px;')
		.container
			.card.shadow-lg.o-hidden.border-0.my-5
				.card-body.p-0
					.row
						.col-lg-5.d-none.d-lg-flex
							.flex-grow-1.bg-register-image(style='background: url(assets/img/avatars/user.svg) center / contain no-repeat;')
						.col-lg-7
							.p-5
								.text-center
									h4.text-dark.mb-4 Add new user
								form.user(method='post')
									.form-group.row
										.col-sm-6.mb-3.mb-sm-0
											input.form-control.form-control-user#exampleFirstName(type='text', placeholder='First Name', name='first_name', required, minlength='2')
										.col-sm-6
											input.form-control.form-control-user#exampleFirstName(type='text', placeholder='Last Name', name='last_name', required, minlength='2')
									.form-group.row
										.col
											label Upload picture
											input(type='file', name='photo', accept='image/*')
									button.btn.btn-primary.btn-block.text-white.btn-user(type='submit') Register User
		script(src='assets/js/jquery.min.js')
		script(src='assets/bootstrap/js/bootstrap.min.js')
		script(src='assets/js/chart.min.js')
		script(src='assets/js/bs-init.js')
		script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.4.1/jquery.easing.js')
		script(src='assets/js/testing_scripts.js')
		script(src='assets/js/theme.js')
		script(src='assets/js/webcam_scripts.js')
		script(src='assets/js/webcam_worker.js')
		script(src='assets/js/websocket_worker.js')